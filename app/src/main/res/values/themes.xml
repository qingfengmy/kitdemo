<resources>

    <style name="AppTheme" parent="BaseAppTheme"></style>
    <!-- Base application theme. -->
    <style name="BaseAppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <!-- actionbar的背景色-->
        <item name="colorPrimary">@color/primary</item>
        <!-- 状态栏的背景色-->
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <!-- actionbar的字体颜色-->
        <item name="android:textColorPrimary">@color/primary_text</item>
        <!--显示在actionbar上的menu字体颜色 5.0用-->
        <item name="android:actionMenuTextColor">@color/primary_text</item>
        <!--显示在actionbar上的menu字体颜色 5.0以下用-->
        <item name="actionMenuTextColor">@color/primary_text</item>
        <item name="toolbarStyle">@style/myToolbar</item>
        <item name="toolbarNavigationButtonStyle">@style/myNavigation</item>
        <!--背景透明 -->
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@color/translation</item>
        <!--navigaview在stateBar上面-->
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:statusBarColor">@color/translation</item>
    </style>

    <style name="myToolbar" parent="ThemeOverlay.AppCompat.ActionBar">
        <item name="android:background">@color/primary</item>
        <item name="titleTextAppearance">@style/myTitle</item>
        <item name="subtitleTextAppearance">
            @style/TextAppearance.Widget.AppCompat.Toolbar.Subtitle
        </item>
        <item name="android:minHeight">?attr/actionBarSize</item>
        <item name="android:textColor">@color/white</item>
        <item name="maxButtonHeight">56dp</item>
        <item name="contentInsetStart">16dp</item>
    </style>

    <style name="myTitle" parent="Base.TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">@dimen/title_bar_size</item>
        <item name="android:textColor">@color/white</item>

    </style>

    <style name="myNavigation" parent="@style/Widget.AppCompat.Toolbar.Button.Navigation">
        <item name="android:background">?attr/actionBarItemBackground</item>
        <item name="android:minWidth">?attr/actionBarSize</item>
        <item name="android:minHeight">?attr/actionBarSize</item>
        <item name="android:scaleType">centerInside</item>
    </style>

    <style name="progressBar_Anim">
        <item name="android:maxWidth">136.0dip</item>
        <item name="android:maxHeight">106.0dip</item>
        <item name="android:indeterminateDrawable">@anim/loading_anim</item>
        <item name="android:minWidth">68.0dip</item>
        <item name="android:minHeight">53.0dip</item>
    </style>

    <style name="progressBar_Color" parent="@android:style/Widget.ProgressBar.Inverse">
        <item name="android:indeterminateDrawable">@drawable/bg_progress_bar</item>
    </style>

    <style name="splash" parent="AppTheme">
        <item name="android:windowBackground">@drawable/logo</item>
    </style>

    <style name="ContextMenuButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/gray</item>
        <item name="android:gravity">left|center_vertical</item>
        <item name="android:paddingLeft">20dp</item>
        <item name="android:paddingRight">20dp</item>
        <item name="android:textColor">?attr/colorPrimary</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="Widget.CardContent" parent="android:Widget">
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:paddingTop">24dp</item>
        <item name="android:paddingBottom">24dp</item>
        <item name="android:orientation">vertical</item>
    </style>
</resources>
